    ViewData["Title"] = "BADEA Portal";
}

@section Scripts {
    <script>
        // Card hover tilt
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.portal-tool-card').forEach(card => {
                card.addEventListener('mousemove', (e) => {
                    const rect = card.getBoundingClientRect();
                    const x = e.clientX - rect.left - rect.width / 2;
                    const y = e.clientY - rect.top - rect.height / 2;
                    card.style.transform = `translateY(-4px) rotateX(${(-y / 80)}deg) rotateY(${x / 80}deg)`;
                });
                card.addEventListener('mouseleave', () => {
                    card.style.transform = 'translateY(0) rotateX(0) rotateY(0)';
                });
            });

            // --- HERO BACKGROUND CAROUSEL ---
            const heroImgs = document.querySelectorAll('.portal-hero-bg-carousel img');
            if (heroImgs.length > 0) {
                let idx = 0;

                function showHero(i) {
                    heroImgs.forEach((img, k) => {
                        img.classList.toggle('active', k === i);
                    });
                }

                showHero(idx);

                // faster rotation – 2.5 seconds
                setInterval(() => {
                    idx = (idx + 1) % heroImgs.length;
                    showHero(idx);
                }, 2500);
            }
        });
    </script>
}

<style>
    /* ---------- HERO ---------- */

    .portal-hero {
        border-radius: 2rem;
        overflow: hidden;
        position: relative;
        box-shadow: 0 26px 80px rgba(0, 0, 0, 0.25);
        background-color: #000;
    }

    /* stack of images under the text */
    .portal-hero-bg-carousel {
        position: absolute;
        inset: 0;
        overflow: hidden;
    }

    .portal-hero-bg-carousel img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0;
        transition: opacity 0.9s ease-in-out;
    }

    .portal-hero-bg-carousel img.active {
        opacity: 1;
    }

    /* darker vignette so images never kill readability */
    .portal-hero-overlay {
        position: absolute;
        inset: 0;
        background:
            linear-gradient(90deg,
                rgba(0, 0, 0, 0.85) 0%,
                rgba(0, 0, 0, 0.65) 30%,
                rgba(0, 0, 0, 0.25) 60%,
                rgba(0, 0, 0, 0.05) 100%),
            radial-gradient(circle at top left, rgba(255, 255, 255, 0.18), transparent 60%);
        mix-blend-mode: normal;
    }

    .portal-hero-inner {
        position: relative;
        z-index: 1;
        padding: 2.75rem 3.5rem;
        color: #fff;
        display: flex;
        gap: 2.25rem;
        align-items: center;
    }

    .portal-hero-left {
        max-width: 460px;
    }

    /* shared glass background for hero cards */
    :root {
:root {
    --portal-hero-glass-bg: rgba(0, 0, 0, 0.55); /* slightly darker so text always readable */
}
    }

    /* main glass card behind hero text */
    .portal-hero-main-card {
        position: relative;
        border-radius: 2rem;
        padding: 1.9rem 2.3rem;
        background:
            radial-gradient(circle at top left, rgba(255, 255, 255, 0.08), transparent 55%),
            var(--portal-hero-glass-bg);
        box-shadow:
            0 20px 55px rgba(0, 0, 0, 0.45),
            0 0 18px rgba(0, 200, 120, 0.18); /* very subtle green glow */
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        overflow: hidden;
    }

    .portal-hero-main-card::before {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: inherit;
        border: 1px solid rgba(255, 255, 255, 0.10);
        box-shadow: inset 0 0 14px rgba(0, 255, 160, 0.15);
        pointer-events: none;
    }

    .portal-pill-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.2rem 0.8rem;
        border-radius: 999px;
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        background: rgba(0, 0, 0, 0.6);
        color: #c0f3d2;
        border: 1px solid rgba(192, 243, 210, 0.45);
    }

    .portal-hero-title {
        font-size: 2.5rem;
        font-weight: 800;
        line-height: 1.15;
        text-shadow: 0 6px 24px rgba(0, 0, 0, 0.8);
    }

    .portal-hero-sub {
        font-size: 0.95rem;
        opacity: 0.92;
    }

    .portal-hero-actions .btn-primary {
        background: #009639;
        border-color: #009639;
        box-shadow: 0 14px 30px rgba(0, 150, 57, 0.45);
        font-weight: 600;
    }

    .portal-hero-actions .btn-outline-light {
        border-width: 1px;
        font-weight: 500;
    }

    .portal-hero-actions .btn {
        border-radius: 999px;
    }

    /* Today’s pulse card – SAME glass bg + subtle glow as main card */
    .portal-hero-pulse {
        min-width: 230px;
        align-self: flex-start;
        background:
            radial-gradient(circle at top, rgba(255, 255, 255, 0.14), transparent 55%),
            var(--portal-hero-glass-bg);  /* same transparency */
        border-radius: 2rem;
        padding: 1.1rem 1.4rem;
        display: flex;
        flex-direction: column;
        gap: .25rem;
        box-shadow:
            0 20px 55px rgba(0, 0, 0, 0.45),
            0 0 18px rgba(0, 200, 120, 0.18); /* very subtle green glow */
    }

    .portal-pulse-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: .08em;
        color: #b6f4c9;
    }

    .portal-pulse-value {
        font-size: 2.2rem;
        font-weight: 700;
        line-height: 1;
    }

    .portal-pulse-note {
        font-size: 0.8rem;
        color: #e6fff0;
        opacity: .85;
    }

    /* ---------- CARDS / BLOG ---------- */

    .portal-section-title {
        font-size: 0.8rem;
        letter-spacing: .12em;
        text-transform: uppercase;
        color: #6c757d;
    }

    .portal-tool-card {
        border-radius: 1.5rem;
        border: 1px solid #e4e6eb;
        padding: 1.6rem 1.5rem;
        background: radial-gradient(circle at top left, #f9fcff, #ffffff);
        box-shadow: 0 14px 32px rgba(15, 29, 45, 0.06);
        transition: transform .25s ease, box-shadow .25s ease, border-color .25s ease;
        cursor: pointer;
    }

    .portal-tool-card:hover {
        box-shadow: 0 20px 60px rgba(15, 29, 45, 0.14);
        border-color: rgba(0, 150, 57, 0.25);
        transform: translateY(-6px);
    }

    .portal-tool-icon {
        width: 40px;
        height: 40px;
        border-radius: 1rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: var(--badea-green-soft);
        color: var(--badea-green);
        margin-bottom: 0.75rem;
        font-size: 1.3rem;
    }

    .portal-tool-meta {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.06em;
        color: #8b9097;
    }

    .portal-chip {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        padding: 0.25rem 0.7rem;
        border-radius: 999px;
        font-size: 0.7rem;
        background: #f1faf5;
        color: #137c3e;
        border: 1px solid #cfead7;
    }

    .portal-blog-card {
        border-radius: 1.25rem;
        background: #fff;
        border: 1px solid #e5e7eb;
        padding: 1.25rem 1.4rem;
        transition: box-shadow .2s ease, transform .2s ease;
    }

    .portal-blog-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 16px 36px rgba(15, 29, 45, 0.08);
    }

    /* ---------- RESPONSIVE ---------- */

    @@media (max-width: 991.98px) {
        .portal-hero-inner {
            flex-direction: column;
            padding: 2.25rem 2rem;
        }

        .portal-hero-left {
            max-width: none;
        }

        .portal-hero-pulse {
            align-self: stretch;
            margin-top: 0.5rem;
        }
    }

    @@media (max-width: 767.98px) {
        .portal-hero-inner {
            padding: 2rem 1.5rem;
        }

        .portal-hero-title {
            font-size: 2.05rem;
        }

        .portal-hero-main-card {
            padding: 1.5rem 1.6rem;
        }
    }
</style>


