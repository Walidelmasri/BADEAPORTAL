        box-shadow: 0 16px 36px rgba(15, 29, 45, 0.08);
    }

    /* ---------- RESPONSIVE ---------- */

    @@media (max-width: 991.98px) {
        .portal-hero-inner {
            flex-direction: column;
            padding: 2.25rem 2rem;
        }

        .portal-hero-left {
            max-width: none;
        }
    }

    @@media (max-width: 767.98px) {
