@*
  Views/Shared/_Layout.cshtml  (BADEAPORTAL)
*@
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BADEAPORTAL</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BADEAPORTAL.styles.css" asp-append-version="true" />

<style>
    :root {
        /* BADEA greens */
        --badea-green: #009639;
        --badea-green-dark: #006b2a;
        --badea-green-soft: #e6f4ec;
        --portal-bg: #f3f5f7;
    }

    body.portal-body {
        background: var(--portal-bg);
    }

    .portal-root {
        min-height: 100vh;
    }

    /* ----------------- SIDEBAR ----------------- */
    .portal-sidebar {
        width: 240px; /* slightly narrower */
        background: radial-gradient(circle at top left, #018f38 0, #006b2a 35%, #004118 100%);
        color: #fff;
        box-shadow: 4px 0 22px rgba(0, 0, 0, 0.25);
        position: relative;
        z-index: 10;
        transition: transform .25s ease-in-out;
    }

    /* top strip = logo only */
    .portal-brand {
        background: #00481d;
        border-bottom: 1px solid rgba(255, 255, 255, 0.15);
        height: 88px;              /* height of the strip */
        display: flex;
        align-items: center;       /* vertically center logo */
        padding: 0 16px;           /* nice left/right breathing room */
    }

    /* link just wraps the logo */
    .portal-brand-link {
        display: inline-flex;
        align-items: center;
        height: 100%;
    }

    /* logo fills the strip without looking crushed */
    .portal-logo-banner {
        display: block;
        height: 64px;             /* tweak this up/down if you want bigger/smaller */
        width: auto;
        object-fit: contain;
    }

    .portal-sidebar nav {
        padding: 1.2rem 1.25rem 1.1rem 1.25rem;
    }

    .portal-sidebar-section-label {
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: .08em;
        color: rgba(255, 255, 255, 0.75);
        margin-bottom: .5rem;
    }

    .portal-sidebar .nav-link {
        border-radius: 999px;
        color: #e4f7eb;
        font-size: 0.9rem;
        padding: 0.45rem 0.9rem;
        display: flex;
        align-items: center;
        gap: .4rem;
        transition: background .18s ease, color .18s ease, box-shadow .18s ease, transform .18s ease;
    }

    .portal-sidebar .nav-link.active {
        background: #ffffff;
        color: var(--badea-green-dark);
        font-weight: 600;
        box-shadow: 0 10px 26px rgba(0, 0, 0, .35);
        transform: translateY(-1px);
    }

    .portal-sidebar .nav-link:hover:not(.active) {
        background: rgba(255, 255, 255, 0.10);
    }

    .portal-sidebar-footer {
        font-size: 0.8rem;
        padding: 0.65rem 1.1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.25);
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: linear-gradient(90deg, rgba(0, 0, 0, .16), rgba(0, 0, 0, .08));
    }

    .portal-sidebar-footer .badge {
        border-radius: 999px;
        font-size: 0.7rem;
    }

    /* --------------- MAIN AREA --------------- */
    .portal-main {
        background: var(--portal-bg);
    }

    .portal-topbar {
        background: rgba(255, 255, 255, 0.96);
        backdrop-filter: blur(10px);
        position: sticky;
        top: 0;
        z-index: 5;
        border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    }

    .portal-content {
        padding: 1.5rem 1.5rem 2.5rem 1.5rem;
    }

    .portal-pill-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.15rem 0.75rem;
        border-radius: 999px;
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.06em;
        background: rgba(0, 0, 0, 0.05);
        color: #555;
    }

    /* ---------- responsive sidebar / hamburger ---------- */

    /* desktop: sidebar always visible */
    @@media (min-width: 768px) {
        .portal-sidebar {
            transform: none !important;
            position: relative;
        }
    }

    /* mobile: sidebar slides over content */
    @@media (max-width: 767.98px) {
        .portal-root {
            flex-direction: column;
        }

        .portal-sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            width: 230px; /* mobile width, also slightly slimmer */
            transform: translateX(-100%);
        }

        body.portal-sidebar-open .portal-sidebar {
            transform: translateX(0);
        }

        /* dimmed backdrop when menu is open */
        body.portal-sidebar-open::before {
            content: "";
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.45);
            z-index: 9;
        }

        .portal-main {
            width: 100%;
        }
    }
</style>

</head>

<body class="portal-body">
    <div class="portal-root d-flex">
        <!-- SIDEBAR -->
        <aside class="portal-sidebar" id="portalSidebar">
            <div class="portal-brand">
                <a asp-area="" asp-controller="Portal" asp-action="Index" class="portal-brand-link">
                    <!-- use your existing English banner logo -->
                    <img src="~/images/logo-negative.png" alt="BADEA" class="portal-logo-banner" />
                </a>
            </div>

            <nav>
                <div class="portal-sidebar-section-label">Portal</div>
                <ul class="nav nav-pills flex-column gap-1">
                    <li class="nav-item">
                        <a class="nav-link active" asp-area="" asp-controller="Portal" asp-action="Index">
                            Overview
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            Tools &amp; apps
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            BADEA updates
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="portal-sidebar-footer">
                <span>Logged in to BADEA</span>
                <span class="badge bg-success border border-light">Online</span>
            </div>
        </aside>

        <!-- MAIN -->
        <div class="portal-main flex-grow-1 d-flex flex-column">
            <header class="portal-topbar px-3 px-md-4 py-2">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-2">
                        <!-- hamburger only on mobile -->
                        <button type="button" class="btn btn-sm btn-outline-success d-md-none" id="portalToggleBtn"
                            aria-label="Toggle navigation">
                            ☰
                        </button>
                        <div class="fw-semibold text-secondary">
                            Welcome to <span class="text-dark">BADEA</span>
                        </div>
                    </div>
                    <div class="small text-muted d-none d-sm-block">
                        Internal portal
                    </div>
                </div>
            </header>

            <main class="portal-content flex-grow-1">
                @RenderBody()
            </main>

            <footer class="border-top small text-muted py-2 px-4">
                &copy; 2025 BADEA – Internal Portal
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // mobile sidebar toggle
        (function () {
            const btn = document.getElementById('portalToggleBtn');
            if (!btn) return;
            btn.addEventListener('click', function () {
                document.body.classList.toggle('portal-sidebar-open');
            });

            // close sidebar when backdrop is clicked
            document.addEventListener('click', function (e) {
                if (!document.body.classList.contains('portal-sidebar-open')) return;
                const sidebar = document.getElementById('portalSidebar');
                if (!sidebar.contains(e.target) && e.target !== btn) {
                    document.body.classList.remove('portal-sidebar-open');
                }
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>