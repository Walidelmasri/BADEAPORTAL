@{
    ViewData["Title"] = "BADEA Announcements";
}

@section Scripts {
    <!-- No special JS needed for this hero right now -->
}

<style>
    /* --- Announcements hero (reuses the same vibe as portal hero) --- */

    .ann-hero {
        border-radius: 2rem;
        overflow: hidden;
        position: relative;
        box-shadow: 0 26px 80px rgba(0, 0, 0, 0.20);
        background-color: #000;
        margin-bottom: 1.75rem;
    }

    .ann-hero-bg {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.92;
    }

    .ann-hero-overlay {
        position: absolute;
        inset: 0;
        background:
            linear-gradient(90deg,
                rgba(0, 0, 0, 0.85) 0%,
                rgba(0, 0, 0, 0.65) 38%,
                rgba(0, 0, 0, 0.18) 100%);
    }

    .ann-hero-inner {
        position: relative;
        z-index: 1;
        padding: 2.3rem 2.7rem;
        color: #fff;
        max-width: 540px;
        display: flex;
        flex-direction: column;
        gap: .7rem;
    }

    .ann-hero-pill {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.18rem 0.85rem;
        border-radius: 999px;
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        background: rgba(0, 0, 0, 0.70);
        color: #d7f7e4;
        border: 1px solid rgba(215, 247, 228, 0.55);
    }

    .ann-hero-title {
        font-size: 1.9rem;
        font-weight: 800;
        line-height: 1.17;
        text-shadow: 0 5px 18px rgba(0, 0, 0, 0.9);
    }

    .ann-hero-sub {
        font-size: 0.95rem;
        opacity: 0.92;
    }

    .ann-hero-meta {
        font-size: 0.78rem;
        text-transform: uppercase;
        letter-spacing: .1em;
        opacity: 0.85;
    }

    @@media (max-width: 767.98px) {
        .ann-hero-inner {
            padding: 1.8rem 1.6rem;
        }

        .ann-hero-title {
            font-size: 1.6rem;
        }
    }

    /* Feed section spacing to avoid sticking to hero */
    .ann-feed-section {
        margin-top: 0.75rem;
    }

    .ann-section-label {
        font-size: 0.78rem;
        letter-spacing: .12em;
        text-transform: uppercase;
        color: #6c757d;
        margin-bottom: 0.35rem;
    }

    .ann-section-sub {
        font-size: 0.8rem;
        color: #9aa0a6;
        margin-bottom: 0.85rem;
    }

    /* Load more button */
    .ann-load-more-btn {
        border-radius: 999px;
        font-size: 0.85rem;
        padding: 0.45rem 1.4rem;
    }
</style>

<div class="container-fluid px-0">
    <!-- HERO -->
    <section class="mb-2">
        <div class="ann-hero">
            <img src="~/images/announcements-hero.jpg" alt="Announcements hero" class="ann-hero-bg" />
            <div class="ann-hero-overlay"></div>

            <div class="ann-hero-inner">
                <span class="ann-hero-pill">BADEA · Internal announcements</span>
                <h1 class="ann-hero-title mb-1">
                    Announcements feed
                </h1>
                <p class="ann-hero-sub mb-1">
                    A simple, focused stream of BADEA internal announcements. Content is static for now – later this can
                    hook into your backend.
                </p>
                <div class="ann-hero-meta">
                    Latest updates · Internal staff
                </div>
            </div>
        </div>
    </section>

    <!-- FEED -->
    <section class="ann-feed-section">
        <div class="ann-section-label">Latest announcements</div>
        <div class="ann-section-sub">
            Showing recent internal messages. Later you can filter by department or date.
        </div>

        <!-- your existing announcement cards go here -->
        <!-- ... -->
        <!-- at the very end of the feed cards: -->
        <div class="text-center mt-3 mb-2">
            <button type="button" class="btn btn-outline-secondary ann-load-more-btn">
                Load more announcements
            </button>
        </div>
    </section>
</div>
